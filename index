    <title>도자기 수축률 계산기</title>
    <style>
        body {

            padding: 20px;
            /* 하얀색 배경 */
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
            /* 파랑색 제목 */
        }

        label {
            display: block;
            text-align: center;
            margin-top: 60px;
            color: black;
            font-weight: bold;
            font-size: 20px;
            /* 파랑색 텍스트 */
        }

        select,
        input,
        #result {

            display: block;
            text-align: center;
            width: 40%;
            margin: 10px auto;
            padding: 5px;
            border: none;
            border-bottom: 1px solid gray;
            border-top: 1px solid gray;

            /* 파랑색 테두리 */
            box-sizing: border-box;
            font-size: 16px;
            color: #4169e1;
            /* 파랑색 텍스트 */
        }


        #result {
            margin-top: 40px;
            width: 80%;
            font-weight: bold;
            color: #ff7f50;
            /* 주황색 결과 텍스트 */
            font-size: 25px;
            border: none;
            /* 박스 테두리 없애기 */
        }
    </style>
